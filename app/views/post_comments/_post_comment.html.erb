<div class="media">
 <p class="pull-right"><small><%= time_ago_in_words(post_comment.created_at) %></small></p>
  <a class="media-left" href="#">
    <%= gravatar_tag post_comment.user.email, :size => 70 %>
  </a>
  <div class="media-body">

    <h4 class="media-heading user_name"><%= post_comment.user.name%></h4>
    <%= post_comment.content %>.
    <p><small><a href="">Like</a> - <a href="">Share</a></small></p>
  </div>
</div>
